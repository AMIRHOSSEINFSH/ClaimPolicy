package rules;

import com.example.demo.dto.ClaimDto;
import java.time.LocalDate;

rule "Discount for Nowruz (Persian New Year)"
@Category(DIS_COUNT)
agenda-group "DIS_COUNT"
when
    $claim : ClaimDto(
        accidentDate != null,
        accidentDate.getMonthValue() == 1,
        accidentDate.getDayOfMonth() >= 1 && accidentDate.getDayOfMonth() <= 13
    )
then
    System.out.println("Nowruz discount applied");
end